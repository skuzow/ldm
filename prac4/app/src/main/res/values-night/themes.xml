<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.QuickTask" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="Theme.QuickTask.Dialog" parent="Theme.AppCompat.DayNight.Dialog" />
    <style name="Theme.QuickTask.DatePickerDialog" parent="@android:style/Theme.Holo.Dialog.MinWidth" />
    <style name="Theme.QuickTask.CheckBox">
        <item name="colorControlActivated">@color/white</item>
    </style>
</resources>