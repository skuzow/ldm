<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.QuickTask" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryVariant">@color/red_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_500</item>
        <item name="colorSecondaryVariant">@color/red_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="Theme.QuickTask" parent="Base.Theme.QuickTask" />
    <style name="Theme.QuickTask.Dialog" parent="Theme.QuickTask" />
    <style name="Theme.QuickTask.DatePickerDialog" parent="@android:style/Theme.Holo.Light.Dialog.MinWidth" />
    <style name="Theme.QuickTask.CheckBox" />
</resources>